{
  "name": "server-autostart",
  "displayName": "Server Autostart Extension",
  "description": "Automatically starts AI servers (Llama, Embedding, MCP) when VS Code loads.",
  "version": "0.0.5",
  "publisher": "artqcid",
  "repository": {
    "type": "git",
    "url": "https://github.com/artqcid/vscode-autostart-extension"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "serverAutostart.startServers",
        "title": "Server Autostart: Start All Servers"
      },
      {
        "command": "serverAutostart.stopServers",
        "title": "Server Autostart: Stop All Servers"
      },
      {
        "command": "serverAutostart.showStatus",
        "title": "Server Autostart: Show Server Status"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Server Autostart Extension Configuration",
      "properties": {
        "serverAutostart.autoStartDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay in milliseconds before starting servers on VS Code activation (default: 2000ms)"
        },
        "serverAutostart.mcpStartDelay": {
          "type": "number",
          "default": 3000,
          "description": "Additional delay in milliseconds before starting MCP server after Llama+Embedding (default: 3000ms)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
